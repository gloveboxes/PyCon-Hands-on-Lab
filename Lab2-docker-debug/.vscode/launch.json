    "version": "0.2.0",
    "configurations": [
        {
            "name": "Raspberry Pi: Python Container Attach",
            "type": "python",
            "request": "attach",
            "preLaunchTask": "start-docker",
            "postDebugTask": "stop-docker",
            "pathMappings": [{
                "localRoot":"${workspaceRoot}/app",
                "remoteRoot":"/app"}
            ],
            "port": "${env:LAB_PORT}",
            "host": "localhost"
        },
    ]
}